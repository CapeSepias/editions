{
    "scripts": {
        "validate-tests": "yarn test",
        "validate-mallard": "if [  -z \"$SKIPMALLARD\"  ]; then eslint 'projects/Mallard/src/**/*.{ts,tsx}' --parser-options=project:./projects/Mallard/tsconfig.json; fi",
        "validate-mallard-tsc": "if [  -z \"$SKIPMALLARD\"  ]; then cd projects/Mallard && yarn tsc; fi",
        "validate-backend": "eslint 'projects/backend/**/*.{ts,tsx}' --parser-options=project:./projects/backend/tsconfig.json",
        "validate-archiver": "eslint 'projects/archiver/**/*.{ts,tsx}' --parser-options=project:./projects/archiver/tsconfig.json",
        "validate-aws": "eslint 'projects/aws/**/*.{ts,tsx}' --parser-options=project:./projects/aws/tsconfig.json",
        "test-mallard": "if [  -z \"$SKIPMALLARD\"  ]; then cd projects/Mallard && yarn test; fi",
        "test-backend": "cd projects/backend && yarn test",
        "test-archiver": "cd projects/archiver && yarn test",
        "test": "run-p -ln --aggregate-output test-*",
        "validate": "run-p -ln --aggregate-output validate-*",
        "fix-mallard": "if [  -z \"$SKIPMALLARD\"  ]; then eslint 'projects/Mallard/src/**/*.{ts,tsx}' --parser-options=project:./projects/Mallard/tsconfig.json --fix; fi",
        "fix-backend": "eslint 'projects/backend/**/*.{ts,tsx}' --parser-options=project:./projects/backend/tsconfig.json --fix",
        "fix-archiver": "eslint 'projects/archiver/**/*.{ts,tsx}' --parser-options=project:./projects/archiver/tsconfig.json --fix",
        "fix-aws": "eslint 'projects/aws/**/*.{ts,tsx}' --parser-options=project:./projects/aws/tsconfig.json --fix",
        "fix": "run-p -ln --aggregate-output fix-*",
        "upload": "node-riffraff-artifact",
        "install-mallard": "if [  -z \"$SKIPMALLARD\"  ]; then cd projects/Mallard && yarn --frozen-lockfile; fi",
        "install-backend": "cd projects/backend && yarn --frozen-lockfile",
        "install-archiver": "cd projects/archiver && yarn --frozen-lockfile",
        "install-aws": "cd projects/aws && yarn --frozen-lockfile",
        "install-crosswords": "cd projects/editions-crossword-renderer-app && yarn --frozen-lockfile",
        "install-common": "cd projects/common && yarn --frozen-lockfile",
        "postinstall": "run-s -ln install-*",
        "build-archiver": "cd projects/archiver && yarn build",
        "build-backend": "cd projects/backend && yarn build",
        "build-aws": "cd projects/aws && yarn build",
        "build": "run-p -ln --aggregate-output build-*"
    },
    "devDependencies": {
        "@guardian/node-riffraff-artifact": "0.0.15",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "eslint": "^6.0.1",
        "eslint-config-prettier": "^5.1.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.2",
        "eslint-plugin-react-hooks": "^1.6.1",
        "lodash": "^4.17.15",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "typescript": "^3.5.2"
    },
    "private": true
}
